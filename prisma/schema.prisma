// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusTask {
  Open
  InProgress
  Urgent
  Done
}

enum Role {
  Normal
  Premium
}

model User {
  Id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Email    String @unique
  Name     String
  Password String

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt

  Roles Role @default(Normal) // enum

  Projects  Project[] // for mapping with userId foreignkey in Project table
  Notebooks NoteBook[] // for mapping with userId foreignkey in NoteBook table
}

model Project {
  Id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Title     String
  Description String?
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  Status StatusTask @default(Open)

  Users   User   @relation(fields: [UserId], references: [Id]) // declare relation foreignkey
  UserId String @db.Uuid // declare id foreignkey

  ListToDos ListToDo[] // for mapping with projectId foreignkey in ListToDo table
}

model ListToDo {
  Id        String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Text      String?
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  Status StatusTask @default(Open)
  Color String @default("C09ACD")
  Index Int @default(1)

  Projects   Project @relation(fields: [ProjectId], references: [Id]) // declare relation foreignkey
  ProjectId String  @db.Uuid // declare id foreignkey
}

model NoteBook {
  Id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Title     String
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  Text      String?

  Users   User   @relation(fields: [UserId], references: [Id]) // declare relation foreignkey
  UserId String @db.Uuid // declare id foreignkey
}
