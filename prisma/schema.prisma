// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Role{
  id  Int @id @default(autoincrement())
  name String

  users User[] // for mapping with roleId foreignkey in User table
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String

  role    Role    @relation(fields: [roleId], references: [id]) // declare relation foreignkey
  roleId  Int // declare id foreignkey

  projects Project[] // for mapping with userId foreignkey in Project table
}

model Project {
  id        Int     @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])  // declare relation foreignkey
  userId  Int // declare id foreignkey

  listtodos ListToDo[] // for mapping with projectId foreignkey in ListToDo table
}

model ListToDo{
  id Int @id @default(autoincrement())
  data String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId],references: [id])
  projectId Int
}